<p style="color: green"><%= notice %></p>

<h1 style="text-align:center">Data to perform CRUD operations</h1>
<div>
<%= button_to "Create New User", new_user_path, :method => "get", class:"btn btn-outline-secondary bi-person-plus"%>
</div>
<table class="table table-striped table-bordered box">
<thead class="table-dark">
  <tr>
    <th scope="col">Id</th>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
    <th style="text-align:center" colspan="3" >CRUD options </th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>

    <tr>
    <th ><%= user.id %></th>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td style="text-align:center"> <%= button_to "VIEW", user, :method => "get", class:"btn btn-primary bi-eye"%></td>
    
    <td style="text-align:center"><%= button_to "EDIT", edit_user_path(user), :method => "get",class:"btn btn-secondary bi-pencil"%></td>
    <td style="text-align:center"><%= link_to "DELETE", user, method: :delete, class:"btn btn-danger bi-trash" %> </td>
   
   </tr>

  <% end %>

  </tbody>

</table>
