<p style="color: green"><%= notice %></p>

<h1 style="text-align:center">Data to perform CRUD operations</h1>

<%= button_to "New user", new_user_path, :method => "get", class:"btn btn-outline-secondary"%>

<table class="table table-striped table-bordered box">
<div class="content-center">
<thead class="table-dark">
  <tr>
    <th scope="col">Id</th>
    <th>Username</th>
    <th>Email</th>
    <th>Password</th>
    <th style="text-align:center" colspan="3" >CRUD options </th>
  </tr>
</thead>

<tbody>
  <% @users.each do |user| %>

    <tr>
    <th ><%= user.id %></th>
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td><%= user.password %></td>
    <td style="text-align:center"> <%= button_to "VIEW", user, :method => "get", class:"btn btn-primary glyphicon glyphicon-eye-open"%></td>
    
    <td style="text-align:center"><%= button_to "EDIT", edit_user_path(user), :method => "get",class:"btn btn-secondary"%></td>
    <td style="text-align:center"><%= button_to "DELETE", user, method: :delete, class:"btn btn-danger" %>  <span class="glyphicorn glyphicon-edit"></span></td>
   
   </tr>

  <% end %>

  </tbody>

</table>
</div>
<div class="text-center">
<%= button_to "Back", root_path, :method => "get", class:"btn btn-warning" %>
</div>
